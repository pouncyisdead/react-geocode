{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES2015", "DOM"],
    "baseUrl": "./src",
    "outDir": "./lib",
    "declaration": true,
    "noEmit": false,
    "sourceMap": false,
    "importHelpers": false,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["lib", "node_modules", "babel.config.js"],
}
